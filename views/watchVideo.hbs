<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{{title}}</title>

    <!-- Orginal BS CND-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/profile.css">

    <style>
        @media only screen and (min-width: 1200px) {
            video {
                width: 100%;
                height: auto;
            }
        }

        @media only screen and (min-width: 992px) {
            video {
                width: 100%;
                height: auto;
            }
        }

        @media only screen and (min-width: 768px) {
            video {
                width: 100%;
                height: auto;
            }
        }

        @media only screen and (min-width: 600px) {
            video {
                width: 100%;
                height: auto;
            }
        }

        @media only screen and (max-width: 600px) {
            video {
                width: 100%;
                height: auto;
            }
        }
    </style>


</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        {{> profileSidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                {{> profileTopbar}}

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Earn Money</h1>
                    </div>
                    <h1>Watch Video </h1>
                    <div class="container mb-4">
                        <!-- Simple Tables -->
                        <div class="card">
                            {{#if videoPageSuccMess}}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong> {{videoPageSuccMess}} </strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                    aria-label="Close"></button>
                            </div>
                            {{/if}}
                            {{#if videoPageErrMess}}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong> {{videoPageErrMess}} </strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                    aria-label="Close"></button>
                            </div>
                            {{/if}}

                            <div class="card-header  d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Available Video</h6>
                                <p>Your today's income <strong>৳{{todaysInc}}</strong></p>
                            </div>

                            <video controls id="video" preload>
                                <source src="upload/{{videoId}}" type="video/mp4">

                                Your browser does not support the video tag.
                            </video>

                            <div class="card-footer">
                                <p>{{videoTile}} </p>
                                {{#if earnBtnContlr}}
                                <div class="wrapper">
                                    <strong class="text-danger">৳{{videoPrice}}</strong>
                                    <p><span id="seconds">00</span>:<span id="tens">00</span>
                                        <small class="text-info"> (Watch Video Minimum 60 Seconds)</small>
                                    </p>
                                    <form action="/watchVideo" method="POST">
                                        <input type="hidden" name="userID" value="{{user_id}}">
                                        <input type="hidden" name="vidEarn" value="{{videoPrice}}">
                                        <div id="text" style="display: none;">
                                            <button type="submit" class="btn btn-success btn-sm">Gain Money</button>
                                            <small class="text-danger">Must be click this button</small>
                                        </div>
                                    </form>
                                </div>
                                {{else}}
                                <div class="alert alert-danger" role="alert">
                                    <h4 class="alert-heading">Today's job done!</h4>
                                    <p class="mb-0">Try next day ...</p>
                                    <hr>
                                    <p class="mb-0">Thank You.</p>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>


                </div>

            </div>
            <!-- Footer -->
            {{> profileFooter}}
            <!-- End of Footer -->
        </div>
    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>


    <!-- Orginal BS Bundel-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>

    <script>
        var video = document.getElementById('video');

        /////////////
        window.onload = function () {

            var seconds = 00;
            var tens = 00;
            var appendTens = document.getElementById("tens");
            var appendSeconds = document.getElementById("seconds");
            var txt = document.getElementById('text');
            var Interval;

            function startTimer() {
                tens++;

                if (tens < 9) {
                    appendTens.innerHTML = "0" + tens;
                }

                if (tens > 9) {
                    appendTens.innerHTML = tens;

                }

                if (tens > 99) {
                    console.log("seconds");
                    seconds++;
                    appendSeconds.innerHTML = "0" + seconds;
                    tens = 0;
                    appendTens.innerHTML = "0" + 0;
                }

                if (seconds > 9) {
                    appendSeconds.innerHTML = seconds;
                }
                if (seconds === 6) {
                    txt.style.display = `block`;
                }
            }
            video.onplaying = (event) => {
                clearInterval(Interval);
                Interval = setInterval(startTimer, 10);

                console.log('Video is no longer paused.');
            };
            video.onpause = (event) => {
                clearInterval(Interval);
                console.log('The Boolean paused property is now true. Either the ' +
                    'pause() method was called or the autoplay attribute was toggled.');
            };
            video.onended = (event) => {
                clearInterval(Interval);
                tens = "00";
                seconds = "00";
                appendTens.innerHTML = tens;
                appendSeconds.innerHTML = seconds;
                console.log('Video stopped either because 1) it was over, ' +
                    'or 2) no further data is available.');
            };
        }
    </script>


</body>

</html>